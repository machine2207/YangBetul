<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BMI Calculator"
        android:textSize="40dp"
        android:id="@+id/text"
        android:textColor="@color/black"
        android:layout_margin="58dp"
        android:gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@+id/text"
        android:id="@+id/weight1"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/weight2"
            android:hint="Enter weight in KG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/weight1"
        android:padding="20dp"
        android:id="@+id/height1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/height2"
            android:hint="Enter height in cm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/height1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:textSize="15dp"
        android:backgroundTint="#4863A0"
        android:text="Calculate" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_below="@id/btnSubmit"
        android:id="@+id/result"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>